<UserControl x:Class="Red_Inventory_Management.Views.SetupConnectionMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Red_Inventory_Management.Views"
             mc:Ignorable="d" Width="Auto" Height="Auto">
    <Border Grid.Column="1" Margin="10" CornerRadius="10" Background="#FFD9B9FF">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Setup database connection" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
            <local:SetupConnectionView Grid.Row="1" DataContext="{Binding}" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        </Grid>
    </Border>
</UserControl>
